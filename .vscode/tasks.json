{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Typecheck and test",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-Command",
				"pnpm install --silent; pnpm typecheck; pnpm test --silent"
			],
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		}
	]
}